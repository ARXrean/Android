<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content">

 <com.example.kzy.musicplayerzz.ViewPagerIndicator
     android:id="@+id/indicator"
     android:layout_height="45dp"
     android:layout_width="match_parent"
     android:orientation="horizontal"
     android:background="@mipmap/gray"
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true">

   <Button
       android:layout_width="75dp"
       android:layout_height="wrap_content"
       android:text="Play"
       android:layout_weight="0.2"
       android:id="@+id/btnPlay"/>

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_weight="0.2"
        android:id="@+id/btnStop"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnPlay" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_weight="0.2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop"
        android:id="@+id/btnNext" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btnDelete"
        android:layout_weight="0.2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnNext"
        android:layout_toEndOf="@+id/btnNext" />

    <Button
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_alignParentTop="true"
        android:layout_weight="0.2"
        android:layout_toRightOf="@+id/btnDelete"
        android:layout_toEndOf="@+id/btnDelete"
        android:id="@+id/btnRefresh" />
 </com.example.kzy.musicplayerzz.ViewPagerIndicator>

 <ListView
     android:id="@+id/localListView"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:layout_below="@+id/indicator"></ListView>
</RelativeLayout>