<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ListView
        android:id="@+id/onlineListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/indicator"></ListView>

    <com.example.kzy.musicplayerzz.ViewPagerIndicator
        android:id="@+id/indicator"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@mipmap/gray"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_weight="0.25"
        android:id="@+id/btnPlay"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="0.25"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnPlay"
        android:layout_toEndOf="@+id/btnPlay"
        android:id="@+id/btnStop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Like"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop"
        android:id="@+id/btnLike" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:text="Next"
        android:layout_weight="0.25"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnLike"
        android:layout_toEndOf="@+id/btnLike" />
    </com.example.kzy.musicplayerzz.ViewPagerIndicator>
</RelativeLayout>